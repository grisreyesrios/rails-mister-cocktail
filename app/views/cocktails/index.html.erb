<%= render "banner" %>
<div class="index-wrapper">
  <div class="container">
    <div class="row">
      <% if @cocktails.count >= 1 %>
        <% @cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, width: 200, height: 150, crop: :fill unless cocktail.photo.blank? %>')">
              <div class="card-description">
                <h2><%= cocktail.name %></h2>
                </p>
              </div>
              <a class="card-link" href=<%= cocktail_path(cocktail) %>></a>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
